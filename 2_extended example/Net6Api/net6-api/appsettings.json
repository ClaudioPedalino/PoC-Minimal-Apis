      "EnableEndpointRateLimiting": true,
      "StackBlockedRequests": true,
      "RealIPHeader": "X-Real-IP",
      "ClientIdHeader": "X-ClientId",
      "HttpStatusCode": 429,
      "EndpointWhitelist": [ "get:/swagger", "*:/api/health" ],
      "ClientWhitelist": [ "dev-id-1", "dev-id-2" ],
      "GeneralRules": [
        {
          "Endpoint": "*:/api/*",
          "Period": "1m",
          "Limit": 5
        },
        {
          "Endpoint": "*:/api/*",
          "Period": "15m",
          "Limit": 100
        }
      ]
    }
  }
